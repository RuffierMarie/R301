{% extends "index.html.twig" %}

{% block content %}

    <div  class="row d-flex container-fluid justify-content-around mx-auto" id="crea" >
        <h2 class="text-center text-dark fw-bold my-2">Liste des utilisateurs</h2>
            {% for uti in utilisateurs %}
            <div class="card d-flex justify-content-around my-2 mx-0 col-12 col-sm-6 col-md-6 col-xl-3 border-info shadow" style="width: 30rem;">
            <div class="card-body">
            <h5 class="card-title text-dark fw-bold">{{uti.nom_utilisateur}}</h5>
            <p class="card-text">{{uti.prenom}}</p>
            <a href="?action=jeu&nom={{uti.nom_utilisateur}}" class="btn btn-outline-info btn-light shadow">Voir ses jeux</a>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}