{% extends "index.html.twig" %}

{% block content %}
<div  class="row d-flex container-fluid justify-content-around mx-auto ">
    <form method="post" action="index.php" class="well w-75 border-info shadow" enctype="multipart/form-data">
	<fieldset>
        
	<legend class="text-center fw-bold">Ajouter un jeu</legend>

        {# titre #}
		<div class="form-group row my-2">
		    <label for="titre" class="col-sm-2 col-form-label col-form-label-sm">Intitulé du jeu</label>
		    <div class="col-sm-8">
			    <input  type="text" id="titre" class="form-control form-control-sm" name="titre" required placeholder="Nom du jeu " />
		    </div>
        </div>

		{# temps #}
		<div class="form-group row my-2">
		    <label for="temps" class="col-sm-2 col-form-label col-form-label-sm">Durée du jeu</label>
		    <div class="col-sm-8">
			    <input  type="time" id="temps" class="form-control form-control-sm" name="temps" required placeholder="Temps d'une partie' " />
		    </div>
        </div>

        {# regles #}
        <div class="form-group row my-2" >
            <label for="regles"class="col-sm-2 col-form-label col-form-label-sm">Règles du jeu</label>
            <div class="col-sm-8">
				<textarea class="form-control form-control-sm" id="regles" name="regles" rows="4" required placeholder="Règles du jeu"></textarea>
		    </div>
		</div>
		
		
		{# Materiel #}
		<div class="form-group row my-2">
		    <label for="materiel" class="col-sm-2 col-form-label col-form-label-sm">Materiel nécessaire</label>
		    <div class="col-sm-8">
			    <input  type="text" id="materiel" class="form-control form-control-sm" name="materiel" required placeholder="Materiel nécessaire pour jouer" />
		    </div>
		</div>

		{# Age #}
		<div class="form-group row my-2">
		    <label for="num" class="col-sm-2 col-form-label col-form-label-sm">Nombre de joueur</label>
		    <div class="col-sm-8">
			    <input  type="number" id="num" class="form-control form-control-sm" name="nb_joueurs" required placeholder="nombre de joueur" />
		    </div>
		</div>

		{# Age #}
		<div class="form-group row my-2">
		    <label for="age" class="col-sm-2 col-form-label col-form-label-sm">Age minimum</label>
		    <div class="col-sm-8">
			    <input  type="number" id="age" class="form-control form-control-sm" name="age_min" required placeholder="Age minimum pour jouer" />
		    </div>
		</div>

        {# Image #}
		<div class="form-group row my-2">
		    <label for="image" class="col-sm-2 col-form-label col-form-label-sm">Lien de l'image</label>
		    <div class="col-sm-8">
			    <input  type="file" accept="image/png, image/jpeg, image/jfif" id="image" class="form-control form-control-sm" name="img_jeu" required placeholder="img.png" />
		    </div>
		</div>

        {# Catégorie #}
		<div class="form-group row my-2">
		    <label for="categorie" class="col-sm-2 col-form-label col-form-label-sm">Catégorie</label>
			<div class="col-sm-8">
		    <select class="form-control form-control-sm" id="categorie" name="nom_categorie" required>
				{% for categorie in categories %}
                <option value="{{categorie.nom_categorie}}">{{categorie.nom_categorie}}</option>
				{% endfor %}
              </select>
		    </div>
		</div>

        
		<br>
        {# bouton #}
		<div class="col-md-12 text-center">
			<input type="hidden" name="nom_utilisateur" value="{{nom_utilisateur}}">
            <input class="btn btn-outline-info btn-light shadow" type="submit" name="ajout_jeu" value="Ajouter le jeu"/>
        </div>
	
	</fieldset>
	</form>
</div>	

{% endblock %}